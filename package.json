{
  "name": "billy-llm-cli",
  "version": "1.0.0",
  "description": "LLM CLI tool with structured responses",
  "main": "pkg-entry.cjs",
  "type": "module",
  "bin": {
    "billy-llm": "./pkg-entry.cjs"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "node build.js",
    "build:win": "pkg . --targets node18-win-x64 --out-path dist",
    "build:linux": "pkg . --targets node18-linux-x64 --out-path dist",
    "build:mac": "pkg . --targets node18-macos-x64,node18-macos-arm64 --out-path dist",
    "build:all": "pkg . --out-path dist"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "axios": "^1.5.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0",
    "ajv": "^8.12.0"
  },
  "keywords": [
    "cli",
    "llm",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "schemas/**/*",
      "workflows/**/*",
      "templates/**/*"
    ],
    "outputPath": "dist",
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "options": [
      "--compress",
      "--public"
    ]
  }
}